{# Opnemen van de "Main" file #}
{% extends "main.html.twig" %}

{% block header %}
    <div class="banner">
        <div class="banner-logo">
            <a href="http://localhost/educom-verrukkulluk-1745327773/indexF.php">
                <img src="assets/img/logo-v2.png" alt="Logo">
            </a>
        </div>
    </div>
    <div class="paging">
        <span class="dot"></span>
        <span class="dot active"></span>
        <span class="dot"></span>
        <span class="dot"></span>
    </div>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <div class="Groceries">
                <h1>Groceries</h1>
                {% for ingredient in data.Ingredients %}
                    <div class="boodschap-item">
                        <div class="item-afbeelding">
                            <img src="assets/img/{{ ingredient.plaatje }}" alt="{{ ingredient.name }}"> 
                        </div>
                        <div class="item-details">
                            <h3 class="item-naam">{{ ingredient.name }}</h3>
                            <p class="item-beschrijving">{{ ingredient.description }}</p>
                        </div>
                        <div class="item-aantal">
                            <input type="number" value="{{ ingredient.quantity }}" min="1">
                        </div>
                        <div class="item-prijs">
                            <span class="price"><i class="fa fa-euro-sign"></i> {{ ingredient.price|default('-') }}</span>
                        </div>
                        <div class="item-acties">
                            <button aria-label="Toevoegen aan lijst"><span style="font-size: 1.5em;">✅</span></button>
                            <button aria-label="Verwijderen"><span style="font-size: 1.5em;">🗑️</span></button>
                        </div>
                    </div>
                {% endfor %}
                <div class="total-price">
                    <h2 class="Total">Total</h2>
                    <div class="price">€ {{ ingredient.quantity * ingredient.price }}</div>
                <div class="item-acties"><button aria-label="Verwijderen"><span style="font-size: 1.5em;">🗑️</span></button></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


